<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyrilmottier.android.gdcatalog"
    android:versionCode="2"
    android:versionName="0.2" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.cyrilmottier.android.gdcatalog.CatalogApplication"
        android:icon="@drawable/ic_gdcatalog"
        android:label="@string/app_name"
        android:theme="@style/Theme.GDCatalog" >
        <uses-library android:name="com.google.android.maps" />

        <activity android:name="com.cyrilmottier.android.gdcatalog.CatalogActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cyrilmottier.android.gdcatalog.InfoTabActivity"
            android:label="@string/general_info_label" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.WebContentActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.AboutActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.BasicItemActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.XmlItemActivity" />
        <activity
            android:name="com.cyrilmottier.android.gdcatalog.TweakedItemViewActivity"
            android:theme="@style/Theme.GDCatalog.TweakedItems" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.SegmentedActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.ActionBarActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.TabbedActionBarActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.TabbedActionBarActivity$FakeActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.QuickActionActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.SimpleAsyncImageViewActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.AsyncImageViewListActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.MapPinMapActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.PagedScrollViewActivity" />
        <activity android:name="com.cyrilmottier.android.gdcatalog.PagedViewActivity" />
    </application>

</manifest>